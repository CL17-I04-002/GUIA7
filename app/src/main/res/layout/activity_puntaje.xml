<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    tools:context=".Puntaje">

    <TextView
        android:id="@+id/txv_nick_jugador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/string_nick_jugador"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="normal"
        app:layout_constraintVertical_bias="0.40"/>

    <TextView
        android:id="@id/txv_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txv_nick_jugador"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/txv_puntaje_jugador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txv_nick"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/string_puntaje"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="normal"
        android:textAllCaps="true"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@id/txv_puntaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txv_puntaje_jugador"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.1"/>

</androidx.constraintlayout.widget.ConstraintLayout>